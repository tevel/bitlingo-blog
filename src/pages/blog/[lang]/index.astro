---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import Footer from '../../../components/Footer.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import Header from '../../../components/Header.astro';
import ReadingTime from '../../../components/ReadingTime.astro';
import Search from '../../../components/Search.astro';
import TagCloud from '../../../components/TagCloud.astro';
import PopularPosts from '../../../components/PopularPosts.astro';
import ScrollReveal from '../../../components/ScrollReveal.astro';
import PixelRobot from '../../../components/PixelRobot.astro';
import WordOfTheDay from '../../../components/WordOfTheDay.astro';
import DailyReward from '../../../components/DailyReward.astro';
import { DEFAULT_LANG, SITE_DESCRIPTION, SITE_TITLE, SUPPORTED_LANGS } from '../../../consts';
import { calculateReadingTime } from '../../../utils/readingTime';

export function getStaticPaths() {
	return SUPPORTED_LANGS.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
if (!SUPPORTED_LANGS.includes(lang)) {
	return Astro.redirect(`/blog/${DEFAULT_LANG}/`, 308);
}

const getPathSlug = (post: (typeof posts)[number]) => {
	if (post.data.path) return post.data.path;
	if (post.data.slug?.startsWith(`${post.data.lang}-`)) {
		return post.data.slug.slice(post.data.lang.length + 1);
	}
	return post.data.slug ?? post.slug ?? post.id;
};

const posts = (await getCollection('blog'))
	.filter((post) => post.data.lang === lang)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPost = posts[0];
const otherPosts = posts.slice(1);

// Translations for search placeholder
const searchPlaceholders: Record<string, string> = {
	en: 'Search articles...',
	es: 'Buscar art√≠culos...',
	fr: 'Rechercher des articles...',
	de: 'Artikel suchen...',
	it: 'Cerca articoli...',
	pt: 'Pesquisar artigos...',
	ja: 'Ë®ò‰∫ã„ÇíÊ§úÁ¥¢...',
	ko: 'Í∏∞ÏÇ¨ Í≤ÄÏÉâ...',
	zh: 'ÊêúÁ¥¢ÊñáÁ´†...',
	ar: 'ÿßŸÑÿ®ÿ≠ÿ´ ŸÅŸä ÿßŸÑŸÖŸÇÿßŸÑÿßÿ™...',
	ru: '–ü–æ–∏—Å–∫ —Å—Ç–∞—Ç–µ–π...',
	hi: '‡§≤‡•á‡§ñ ‡§ñ‡•ã‡§ú‡•á‡§Ç...',
	tr: 'Makale ara...',
	pl: 'Szukaj artyku≈Ç√≥w...',
	uk: '–ü–æ—à—É–∫ —Å—Ç–∞—Ç–µ–π...',
	he: '◊ó◊§◊© ◊û◊ê◊û◊®◊ô◊ù...',
};
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead
			title={`${SITE_TITLE} | ${lang.toUpperCase()}`}
			description={SITE_DESCRIPTION}
			lang={lang}
			keywords={[
				'bitlingo blog',
				'audio vocabulary tips',
				'product updates',
				lang,
				'language learning',
			]}
		/>
		<script type="application/ld+json">
			{JSON.stringify({
				'@context': 'https://schema.org',
				'@type': 'Blog',
				name: 'BitLingo Blog',
				description: SITE_DESCRIPTION,
				url: new URL(`/blog/${lang}`, Astro.site),
				blogPost: posts.map((post) => ({
					'@type': 'BlogPosting',
					headline: post.data.title,
					description: post.data.description,
					url: new URL(`/blog/${lang}/${getPathSlug(post)}/`, Astro.site),
					datePublished: post.data.pubDate.toISOString(),
					dateModified: (post.data.updatedDate ?? post.data.pubDate).toISOString(),
					image: post.data.heroImage ? new URL(post.data.heroImage.src, Astro.site) : undefined,
				})),
			})}
		</script>
	</head>
	<body>
		<Header />
		<main>
			<!-- Page Header -->
			<section class="page-header">
				<ScrollReveal animation="fade-up">
					<div class="header-badge">üìö BitLingo Blog</div>
					<h1>Learn Smarter,<br/><span class="gradient-text">Not Harder</span></h1>
					<p class="header-description">
						Tips, strategies, and insights to maximize your audio-first language learning journey.
					</p>
				</ScrollReveal>
				
				<!-- Search Bar -->
				<ScrollReveal animation="fade-up" delay={100}>
					<div class="search-wrapper">
						<Search lang={lang} placeholder={searchPlaceholders[lang] || searchPlaceholders.en} />
					</div>
				</ScrollReveal>
			</section>

			<div class="content-layout">
				<div class="main-content">
					<!-- Featured Post -->
					{featuredPost && (
						<ScrollReveal animation="fade-up">
							<section class="featured-section">
								<a href={`/blog/${lang}/${getPathSlug(featuredPost)}/`} class="featured-card">
									<div class="featured-image">
										{featuredPost.data.heroImage && (
											<Image 
												width={800} 
												height={400} 
												src={featuredPost.data.heroImage} 
												alt={featuredPost.data.ogImageAlt || featuredPost.data.title}
											/>
										)}
										<div class="featured-badge">Featured</div>
									</div>
									<div class="featured-content">
										<div class="post-meta">
											<FormattedDate date={featuredPost.data.pubDate} />
											<span class="meta-separator">‚Ä¢</span>
											<ReadingTime minutes={calculateReadingTime(featuredPost.body || '')} lang={lang} size="small" />
										</div>
										<h2>{featuredPost.data.title}</h2>
										<p>{featuredPost.data.description}</p>
										<span class="read-more">
											Read article
											<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
												<line x1="5" y1="12" x2="19" y2="12"/>
												<polyline points="12 5 19 12 12 19"/>
											</svg>
										</span>
									</div>
								</a>
							</section>
						</ScrollReveal>
					)}

					<!-- Posts Grid -->
					<section class="posts-section">
						<div class="section-header">
							<h2 class="section-title">Latest Articles</h2>
							<a href={`/blog/${lang}/archive/`} class="archive-link">
								View Archive
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<line x1="5" y1="12" x2="19" y2="12"/>
									<polyline points="12 5 19 12 12 19"/>
								</svg>
							</a>
						</div>
						<div class="posts-grid">
							{otherPosts.map((post, index) => (
								<ScrollReveal animation="fade-up" delay={index * 50}>
									<a href={`/blog/${lang}/${getPathSlug(post)}/`} class="post-card">
										<div class="post-image">
											{post.data.heroImage && (
												<Image 
													width={400} 
													height={200} 
													src={post.data.heroImage} 
													alt={post.data.ogImageAlt || post.data.title}
												/>
											)}
										</div>
										<div class="post-content">
											<div class="post-meta">
												<FormattedDate date={post.data.pubDate} />
												<span class="meta-separator">‚Ä¢</span>
												<ReadingTime minutes={calculateReadingTime(post.body || '')} lang={lang} size="small" />
											</div>
											<h3>{post.data.title}</h3>
											<p>{post.data.description}</p>
										</div>
									</a>
								</ScrollReveal>
							))}
						</div>
					</section>
				</div>

				<!-- Sidebar -->
				<aside class="sidebar">
					<ScrollReveal animation="fade-left" delay={100}>
						<WordOfTheDay lang={lang} />
					</ScrollReveal>
					<ScrollReveal animation="fade-left" delay={200}>
						<PopularPosts lang={lang} limit={5} />
					</ScrollReveal>
					<ScrollReveal animation="fade-left" delay={300}>
						<TagCloud lang={lang} limit={15} />
					</ScrollReveal>
				</aside>
			</div>
		</main>
		<Footer lang={lang} />
		
		<!-- Daily Login Reward -->
		<DailyReward />
		
		<!-- Pixel the Robot Mascot -->
		<PixelRobot initialMood="happy" position="top-left" />
	</body>
</html>

<style>
	main {
		max-width: 1400px;
		margin: 0 auto;
		padding: 2rem 1.5rem 4rem;
	}

	/* Page Header */
	.page-header {
		text-align: center;
		padding: 3rem 0 4rem;
	}

	.header-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: rgba(245, 166, 35, 0.15);
		border: 1px solid rgba(245, 166, 35, 0.3);
		border-radius: 50px;
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--accent-primary);
		margin-bottom: 1.5rem;
	}

	.page-header h1 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		line-height: 1.1;
		margin: 0 0 1rem;
	}

	.gradient-text {
		background: linear-gradient(135deg, #f5a623 0%, #ffb940 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.header-description {
		font-size: 1.15rem;
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto 2rem;
	}

	.search-wrapper {
		display: flex;
		justify-content: center;
		margin-top: 1.5rem;
	}

	/* Content Layout */
	.content-layout {
		display: grid;
		grid-template-columns: 1fr 320px;
		gap: 3rem;
		align-items: start;
	}

	.main-content {
		min-width: 0;
	}

	.sidebar {
		position: sticky;
		top: 100px;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	/* Featured Section */
	.featured-section {
		margin-bottom: 3rem;
	}

	.featured-card {
		display: grid;
		grid-template-columns: 1.2fr 1fr;
		gap: 2rem;
		background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0));
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 24px;
		overflow: hidden;
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.featured-card:hover {
		transform: translateY(-5px);
		border-color: rgba(245, 166, 35, 0.3);
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3), 0 0 40px rgba(245, 166, 35, 0.1);
	}

	.featured-image {
		position: relative;
		overflow: hidden;
	}

	.featured-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 0;
		transition: transform 0.4s ease;
	}

	.featured-card:hover .featured-image img {
		transform: scale(1.05);
	}

	.featured-badge {
		position: absolute;
		top: 1rem;
		left: 1rem;
		padding: 0.4rem 1rem;
		background: linear-gradient(135deg, #f5a623, #e8930c);
		border-radius: 50px;
		color: #1a365d;
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.featured-content {
		padding: 2rem 2rem 2rem 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.featured-content h2 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		margin: 0.5rem 0 1rem;
		color: var(--text-primary);
		line-height: 1.3;
	}

	.featured-content p {
		color: var(--text-secondary);
		font-size: 1rem;
		line-height: 1.6;
		margin: 0 0 1.5rem;
	}

	.post-meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.85rem;
		color: var(--text-muted);
		font-weight: 500;
	}

	.meta-separator {
		opacity: 0.5;
	}

	.read-more {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--accent-primary);
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.3s ease;
	}

	.read-more svg {
		width: 18px;
		height: 18px;
		transition: transform 0.3s ease;
	}

	.featured-card:hover .read-more {
		color: var(--accent-light);
	}

	.featured-card:hover .read-more svg {
		transform: translateX(5px);
	}

	/* Posts Section */
	.posts-section {
		padding-top: 1rem;
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.section-title {
		font-size: 1.5rem;
		margin: 0;
		color: var(--text-primary);
	}

	.archive-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--accent-primary);
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9rem;
		transition: all 0.2s ease;
	}

	.archive-link:hover {
		color: var(--accent-light);
	}

	.archive-link svg {
		width: 16px;
		height: 16px;
		transition: transform 0.2s ease;
	}

	.archive-link:hover svg {
		transform: translateX(3px);
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1.5rem;
	}

	.post-card {
		display: flex;
		flex-direction: column;
		background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0));
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 20px;
		overflow: hidden;
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		height: 100%;
	}

	.post-card:hover {
		transform: translateY(-5px);
		border-color: rgba(245, 166, 35, 0.3);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2), 0 0 30px rgba(245, 166, 35, 0.1);
	}

	.post-image {
		position: relative;
		overflow: hidden;
		aspect-ratio: 16/9;
	}

	.post-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 0;
		transition: transform 0.4s ease;
	}

	.post-card:hover .post-image img {
		transform: scale(1.05);
	}

	.post-content {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		flex-grow: 1;
	}

	.post-content h3 {
		font-size: 1.1rem;
		margin: 0.5rem 0 0.75rem;
		color: var(--text-primary);
		line-height: 1.4;
		transition: color 0.3s ease;
	}

	.post-card:hover .post-content h3 {
		color: var(--accent-primary);
	}

	.post-content p {
		color: var(--text-secondary);
		font-size: 0.9rem;
		line-height: 1.6;
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	/* Responsive */
	@media (max-width: 1100px) {
		.content-layout {
			grid-template-columns: 1fr;
		}

		.sidebar {
			position: static;
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
			gap: 1.5rem;
		}
	}

	@media (max-width: 900px) {
		.featured-card {
			grid-template-columns: 1fr;
		}

		.featured-content {
			padding: 1.5rem;
		}

		.featured-image {
			aspect-ratio: 16/9;
		}
	}

	@media (max-width: 600px) {
		main {
			padding: 1rem 1rem 3rem;
		}

		.page-header {
			padding: 2rem 0 3rem;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}

		.section-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.75rem;
		}

		.sidebar {
			grid-template-columns: 1fr;
		}
	}
</style>
