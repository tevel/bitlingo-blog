---
import { DEFAULT_LANG } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import ProgressWidget from './ProgressWidget.astro';
---

<header>
	<nav>
		<a href={`/blog/${DEFAULT_LANG}`} class="logo">
			<div class="logo-icon">
				<svg viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" width="40" height="40">
					<!-- Background rounded square -->
					<rect x="4" y="4" width="40" height="40" rx="10" fill="url(#logo-bg)"/>
					<!-- Headphone arc left -->
					<path d="M10 26C10 19.4 15.4 14 22 14" stroke="#1a365d" stroke-width="3" stroke-linecap="round" fill="none"/>
					<!-- Headphone arc right -->
					<path d="M38 26C38 19.4 32.6 14 26 14" stroke="#1a365d" stroke-width="3" stroke-linecap="round" fill="none"/>
					<!-- Left earpiece -->
					<rect x="8" y="24" width="6" height="12" rx="3" fill="#1a365d"/>
					<!-- Right earpiece -->
					<rect x="34" y="24" width="6" height="12" rx="3" fill="#1a365d"/>
					<!-- B letter -->
					<text x="24" y="33" text-anchor="middle" font-family="Arial Black, sans-serif" font-size="18" font-weight="900" fill="#1a365d">B</text>
					<defs>
						<linearGradient id="logo-bg" x1="4" y1="4" x2="44" y2="44" gradientUnits="userSpaceOnUse">
							<stop stop-color="#f5a623"/>
							<stop offset="1" stop-color="#e8930c"/>
						</linearGradient>
					</defs>
				</svg>
			</div>
			<span class="logo-text"><span class="title-bit">Bit</span><span class="title-lingo">Lingo</span></span>
		</a>
		
		<div class="nav-links">
			<a href={`/blog/${DEFAULT_LANG}`} class="nav-link">
				<svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
					<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
					<polyline points="9 22 9 12 15 12 15 22"/>
				</svg>
				<span>Home</span>
			</a>
			<a href={`/blog/${DEFAULT_LANG}`} class="nav-link">
				<svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
					<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
					<path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
				</svg>
				<span>Blog</span>
			</a>
			<a href="/games" class="nav-link games-link">
				<svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
					<rect x="2" y="6" width="20" height="12" rx="2"/>
					<circle cx="8" cy="12" r="2"/>
					<circle cx="16" cy="12" r="2"/>
					<path d="M9 17v2"/>
					<path d="M15 17v2"/>
				</svg>
				<span>Games</span>
			</a>
			<a href="/leaderboard" class="nav-link leaderboard-link">
				<svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
					<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
				</svg>
				<span>Leaderboard</span>
			</a>
			<a href="/about" class="nav-link">
				<svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
					<circle cx="12" cy="12" r="10"/>
					<path d="M12 16v-4"/>
					<path d="M12 8h.01"/>
				</svg>
				<span>About</span>
			</a>
		</div>
		
		<a href="https://bitlingo.app" target="_blank" rel="noopener noreferrer" class="cta-button">
			<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
				<polygon points="5 3 19 12 5 21 5 3"/>
			</svg>
			<span>Open App</span>
		</a>
		
		<div class="header-widgets">
			<ProgressWidget compact={true} />
			<ThemeToggle />
		</div>
		
		<button class="mobile-menu-btn" aria-label="Toggle menu">
			<span></span>
			<span></span>
			<span></span>
		</button>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 10001; /* Higher than modal (10000) to ensure header is always clickable */
		background: rgba(26, 54, 93, 0.95);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(245, 166, 35, 0.2);
		pointer-events: auto !important; /* Ensure header is clickable */
	}
	
	/* Ensure all header children are clickable */
	header * {
		pointer-events: auto !important;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.75rem 1.5rem;
		gap: 2rem;
		pointer-events: auto !important; /* Ensure nav is clickable */
	}
	
	/* Ensure all nav links and buttons are clickable */
	nav a,
	nav button {
		pointer-events: auto !important;
		cursor: pointer;
		position: relative;
		z-index: 10002; /* Higher than header to ensure clickability */
	}
	
	/* Logo */
	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: var(--text-primary);
	}
	
	.logo-icon {
		width: 40px;
		height: 40px;
		min-width: 40px;
		max-width: 40px;
		flex-shrink: 0;
		display: flex;
	}
	
	.logo-icon svg {
		width: 40px;
		height: 40px;
	}
	
	.logo-text {
		font-family: 'Nunito', system-ui, sans-serif;
		font-size: 1.8rem;
		font-weight: 900;
		letter-spacing: 0.5px;
		line-height: 1.2;
	}
	
	/* "Bit" - Gold color (matches mascot and accent) */
	.logo-text .title-bit {
		color: #ffd700;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
	}
	
	/* "Lingo" - White/primary text color */
	.logo-text .title-lingo {
		color: #f0f4f8;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
	}
	
	.logo:hover .logo-text .title-bit {
		color: #ffe44d;
	}
	
	/* Navigation links */
	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	
	.nav-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.6rem 1rem;
		border-radius: 12px;
		color: var(--text-secondary);
		font-weight: 500;
		font-size: 0.95rem;
		text-decoration: none;
		transition: all 0.3s ease;
		position: relative;
	}
	
	.nav-icon {
		width: 18px;
		height: 18px;
		min-width: 18px;
		max-width: 18px;
		stroke-width: 2;
		flex-shrink: 0;
	}
	
	nav svg {
		width: 18px;
		height: 18px;
		flex-shrink: 0;
	}
	
	.nav-link:hover {
		color: var(--text-primary);
		background: rgba(245, 166, 35, 0.15);
	}
	
	.nav-link::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #f5a623, #ffb940);
		border-radius: 2px;
		transition: width 0.3s ease;
	}
	
	.nav-link:hover::after {
		width: 60%;
	}
	
	.games-link,
	.leaderboard-link {
		background: linear-gradient(135deg, rgba(245, 166, 35, 0.1), rgba(245, 166, 35, 0.05));
		border: 1px solid rgba(245, 166, 35, 0.2);
	}
	
	.games-link:hover,
	.leaderboard-link:hover {
		background: linear-gradient(135deg, rgba(245, 166, 35, 0.2), rgba(245, 166, 35, 0.1));
		border-color: rgba(245, 166, 35, 0.4);
	}
	
	.leaderboard-link .nav-icon {
		fill: var(--accent-primary);
		stroke: var(--accent-primary);
	}
	
	/* CTA Button */
	.cta-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.6rem 1.25rem;
		background: linear-gradient(135deg, #f5a623, #e8930c);
		border-radius: 50px;
		color: #1a365d;
		font-weight: 700;
		font-size: 0.9rem;
		text-decoration: none;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(245, 166, 35, 0.3);
	}
	
	.cta-button svg {
		width: 16px;
		height: 16px;
		fill: #1a365d;
		stroke: none;
	}

	.header-widgets {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 25px rgba(245, 166, 35, 0.5);
		color: #1a365d;
	}
	
	/* Mobile menu button */
	.mobile-menu-btn {
		display: none;
		flex-direction: column;
		justify-content: center;
		gap: 5px;
		width: 40px;
		height: 40px;
		padding: 8px;
		background: transparent;
		border: 1px solid rgba(245, 166, 35, 0.3);
		border-radius: 10px;
		cursor: pointer;
	}
	
	.mobile-menu-btn span {
		display: block;
		width: 100%;
		height: 2px;
		background: #f5a623;
		border-radius: 2px;
		transition: all 0.3s ease;
	}
	
	.mobile-menu-btn:hover {
		border-color: #f5a623;
		background: rgba(245, 166, 35, 0.1);
	}
	
	/* Responsive */
	@media (max-width: 768px) {
		nav {
			padding: 0.75rem 1rem;
		}
		
		.logo-text {
			display: none;
		}
		
		.nav-links {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			flex-direction: column;
			padding: 1rem;
			background: rgba(26, 54, 93, 0.98);
			border-bottom: 1px solid rgba(245, 166, 35, 0.2);
		}
		
		.nav-links.active {
			display: flex;
		}
		
		.nav-link {
			width: 100%;
			justify-content: center;
			padding: 1rem;
		}
		
		.mobile-menu-btn {
			display: flex;
		}
		
		.cta-button span {
			display: none;
		}
		
		.cta-button {
			padding: 0.6rem;
			border-radius: 12px;
		}
	}
</style>

<script>
	// Mobile menu toggle
	document.querySelector('.mobile-menu-btn')?.addEventListener('click', () => {
		document.querySelector('.nav-links')?.classList.toggle('active');
	});
</script>
