---
import { DEFAULT_LANG } from '../consts';
import ProgressWidget from './ProgressWidget.astro';
---

<header>
	<nav>
		<a href="https://bitlingo.app" target="_blank" rel="noopener noreferrer" class="logo">
			<img src="/favicon.svg" alt="BitLingo" class="logo-img" width="40" height="40" />
			<span class="logo-text"><span class="title-bit">Bit</span><span class="title-lingo">Lingo</span></span>
		</a>
		
		<div class="nav-links">
			<a href={`/blog/${DEFAULT_LANG}`} class="nav-link">
				<svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
					<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
					<path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
				</svg>
				<span>Blog</span>
			</a>
			<a href={`/blog/${DEFAULT_LANG}/games`} class="nav-link games-link">
				<svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
					<rect x="2" y="6" width="20" height="12" rx="2"/>
					<circle cx="8" cy="12" r="2"/>
					<circle cx="16" cy="12" r="2"/>
					<path d="M9 17v2"/>
					<path d="M15 17v2"/>
				</svg>
				<span>Games</span>
			</a>
		</div>
		
		<div class="header-right">
			<div class="header-widgets">
				<ProgressWidget compact={true} />
			</div>
		</div>
		
		<button class="mobile-menu-btn" aria-label="Toggle menu">
			<span></span>
			<span></span>
			<span></span>
		</button>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 10001; /* Higher than modal (10000) to ensure header is always clickable */
		background: rgba(26, 54, 93, 0.95);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(245, 166, 35, 0.2);
		pointer-events: auto !important; /* Ensure header is clickable */
	}
	
	/* Ensure all header children are clickable */
	header * {
		pointer-events: auto !important;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.75rem 1.5rem;
		gap: 2rem;
		pointer-events: auto !important; /* Ensure nav is clickable */
		position: relative;
		overflow: visible;
	}
	
	/* Ensure all nav links and buttons are clickable */
	nav a,
	nav button {
		pointer-events: auto !important;
		cursor: pointer;
		position: relative;
		z-index: 10002; /* Higher than header to ensure clickability */
	}
	
	/* Logo */
	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: var(--text-primary);
	}
	
	.logo-img {
		width: 40px;
		height: 40px;
		min-width: 40px;
		max-width: 40px;
		flex-shrink: 0;
		display: block;
		filter: drop-shadow(0 2px 2px rgba(0, 0, 0, 0.3));
	}
	
	.logo-text {
		font-family: 'Nunito', system-ui, sans-serif;
		font-size: 1.8rem;
		font-weight: 800;
		letter-spacing: 1px;
		line-height: 1.2;
	}
	
	/* "Bit" - Gold color (matches mascot and accent) */
	.logo-text .title-bit {
		color: #ffd700;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
	}
	
	/* "Lingo" - White/primary text color */
	.logo-text .title-lingo {
		color: #f0f4f8;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
	}
	
	.logo:hover .logo-text .title-bit {
		color: #ffe44d;
	}
	
	/* Navigation links */
	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex-shrink: 0;
	}
	
	.nav-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.6rem 1rem;
		border-radius: 12px;
		color: var(--text-secondary);
		font-weight: 500;
		font-size: 0.95rem;
		text-decoration: none;
		transition: all 0.3s ease;
		position: relative;
	}
	
	.nav-icon {
		width: 18px;
		height: 18px;
		min-width: 18px;
		max-width: 18px;
		stroke-width: 2;
		flex-shrink: 0;
	}
	
	nav svg {
		width: 18px;
		height: 18px;
		flex-shrink: 0;
	}
	
	.nav-link:hover {
		color: var(--text-primary);
		background: rgba(245, 166, 35, 0.15);
	}
	
	.nav-link::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #f5a623, #ffb940);
		border-radius: 2px;
		transition: width 0.3s ease;
	}
	
	.nav-link:hover::after {
		width: 60%;
	}
	
	.games-link,
	.leaderboard-link {
		background: linear-gradient(135deg, rgba(245, 166, 35, 0.1), rgba(245, 166, 35, 0.05));
		border: 1px solid rgba(245, 166, 35, 0.2);
	}
	
	.games-link:hover,
	.leaderboard-link:hover {
		background: linear-gradient(135deg, rgba(245, 166, 35, 0.2), rgba(245, 166, 35, 0.1));
		border-color: rgba(245, 166, 35, 0.4);
	}
	
	.games-link {
		background: linear-gradient(135deg, rgba(245, 166, 35, 0.1), rgba(245, 166, 35, 0.05));
		border: 1px solid rgba(245, 166, 35, 0.2);
	}
	
	.games-link:hover {
		background: linear-gradient(135deg, rgba(245, 166, 35, 0.2), rgba(245, 166, 35, 0.1));
		border-color: rgba(245, 166, 35, 0.4);
	}

	.header-right {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		flex-shrink: 0;
		margin-left: auto;
	}
	
	.header-widgets {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	/* Mobile menu button */
	.mobile-menu-btn {
		display: none;
		flex-direction: column;
		justify-content: center;
		gap: 5px;
		width: 40px;
		height: 40px;
		padding: 8px;
		background: transparent;
		border: 1px solid rgba(245, 166, 35, 0.3);
		border-radius: 10px;
		cursor: pointer;
		flex-shrink: 0;
		margin-left: 0.5rem;
	}
	
	.mobile-menu-btn span {
		display: block;
		width: 100%;
		height: 2px;
		background: #f5a623;
		border-radius: 2px;
		transition: all 0.3s ease;
	}
	
	.mobile-menu-btn:hover {
		border-color: #f5a623;
		background: rgba(245, 166, 35, 0.1);
	}
	
	/* Responsive - Show mobile menu button when nav links don't fit */
	@media (max-width: 900px) {
		.mobile-menu-btn {
			display: flex;
		}
	}
	
	/* Responsive - Hide nav links on smaller screens, show in mobile menu */
	@media (max-width: 768px) {
		nav {
			padding: 0.75rem 1rem;
			gap: 1rem;
		}
		
		.logo-text {
			display: none;
		}
		
		.nav-links {
			display: none;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			flex-direction: column;
			padding: 1rem;
			background: rgba(26, 54, 93, 0.98);
			border-bottom: 1px solid rgba(245, 166, 35, 0.2);
			z-index: 10003;
			backdrop-filter: blur(20px);
			-webkit-backdrop-filter: blur(20px);
		}
		
		.nav-links.active {
			display: flex;
		}
		
		.nav-link {
			width: 100%;
			justify-content: center;
			padding: 1rem;
		}
		
		.header-right {
			gap: 0.5rem;
		}
		
		.header-widgets {
			gap: 0.5rem;
		}
	}
	
	/* On larger screens, hide mobile menu button if nav links fit */
	@media (min-width: 901px) {
		.mobile-menu-btn {
			display: none !important;
		}
	}
	
	@media (max-width: 480px) {
		nav {
			padding: 0.5rem 0.75rem;
			gap: 0.5rem;
		}
		
		.header-widgets {
			display: flex;
			gap: 0.25rem;
		}
	}
</style>

<script>
	// Mobile menu toggle
	document.querySelector('.mobile-menu-btn')?.addEventListener('click', () => {
		document.querySelector('.nav-links')?.classList.toggle('active');
	});
</script>
