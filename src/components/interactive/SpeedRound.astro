      <div class="action-buttons">
        <button class="btn-restart">Try Again</button>
        <a href="https://bitlingo.app" target="_blank" rel="noopener" class="btn-cta">
          Practice More ‚Üí
        </a>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ words, duration }}>
  document.addEventListener('DOMContentLoaded', () => {
    const games = document.querySelectorAll('.speed-round');
    
    games.forEach(game => {
      let timeRemaining = duration;
      let correctCount = 0;
      let currentStreak = 0;
      let bestStreak = 0;
      let timer = null;
      let currentWord = null;

      const elements = {
        gameStart: game.querySelector('.game-start'),
        gamePlaying: game.querySelector('.game-playing'),
        gameOver: game.querySelector('.game-over'),
        btnStart: game.querySelector('.btn-start'),
        btnRestart: game.querySelector('.btn-restart'),
        timerFill: game.querySelector('.timer-fill'),
        timeRemaining: game.querySelector('.time-remaining'),
        correctCount: game.querySelector('.correct-count'),
        streakCount: game.querySelector('.streak-count'),
        questionWord: game.querySelector('.question-word'),
        questionPronunciation: game.querySelector('.question-pronunciation'),
        answerOptions: game.querySelector('.answer-options'),
        finalCorrect: game.querySelector('.final-correct'),
        finalStreak: game.querySelector('.final-streak'),
        finalWpm: game.querySelector('.final-wpm'),
      };

      function startGame() {
        timeRemaining = duration;
        correctCount = 0;
        currentStreak = 0;
        bestStreak = 0;
        
        elements.gameStart.hidden = true;
        elements.gamePlaying.hidden = false;
        elements.gameOver.hidden = true;
        
        updateDisplay();
        showNextQuestion();
        startTimer();
      }

      function startTimer() {
        timer = window.setInterval(() => {
          timeRemaining--;
          updateTimerDisplay();
          
          if (timeRemaining <= 0) {
            endGame();
          }
        }, 1000);
      }

      function updateTimerDisplay() {
        if (elements.timeRemaining) {
          elements.timeRemaining.textContent = timeRemaining.toString();
        }
        if (elements.timerFill) {
          const percent = (timeRemaining / duration) * 100;
          elements.timerFill.style.width = `${percent}%`;
          
          // Color changes based on time
          if (percent <= 20) {
            elements.timerFill.style.background = '#ef4444';
          } else if (percent <= 40) {
            elements.timerFill.style.background = '#f5a623';
          }
        }
      }

      function updateDisplay() {
        if (elements.correctCount) {
          elements.correctCount.textContent = correctCount.toString();
        }
        if (elements.streakCount) {
          elements.streakCount.textContent = currentStreak.toString();
        }
      }

      function showNextQuestion() {
        currentWord = words[Math.floor(Math.random() * words.length)];
        
        if (elements.questionWord) {
          elements.questionWord.textContent = currentWord.word;
        }
        if (elements.questionPronunciation) {
          elements.questionPronunciation.textContent = currentWord.pronunciation || '';
        }
        
        // Generate options
        const options = [currentWord.translation];
        const otherWords = words.filter(w => w.id !== currentWord?.id);
        const shuffled = otherWords.sort(() => Math.random() - 0.5);
        
        for (let i = 0; i < 3 && i < shuffled.length; i++) {
          options.push(shuffled[i].translation);
        }
        
        const shuffledOptions = options.sort(() => Math.random() - 0.5);
        
        if (elements.answerOptions) {
          elements.answerOptions.innerHTML = shuffledOptions.map(opt => `
            <button class="speed-option" data-answer="${opt}">
              ${opt}
            </button>
          `).join('');
          
          // Add click handlers
          elements.answerOptions.querySelectorAll('.speed-option').forEach(btn => {
            btn.addEventListener('click', () => handleAnswer(btn));
          });
        }
      }

      function handleAnswer(btn) {
        const isCorrect = btn.dataset.answer === currentWord?.translation;
        
        if (isCorrect) {
          correctCount++;
          currentStreak++;
          bestStreak = Math.max(bestStreak, currentStreak);
          btn.classList.add('correct');
        } else {
          currentStreak = 0;
          btn.classList.add('incorrect');
          
          // Show correct answer
          elements.answerOptions?.querySelectorAll('.speed-option').forEach(b => {
            if (b.dataset.answer === currentWord?.translation) {
              b.classList.add('correct');
            }
          });
        }
        
        updateDisplay();
        
        // Quick transition to next question
        setTimeout(() => {
          showNextQuestion();
        }, isCorrect ? 200 : 500);
      }

      function endGame() {
        if (timer) clearInterval(timer);
        
        elements.gamePlaying.hidden = true;
        elements.gameOver.hidden = false;
        
        const wpm = Math.round(correctCount * (60 / duration));
        
        if (elements.finalCorrect) {
          elements.finalCorrect.textContent = correctCount.toString();
        }
        if (elements.finalStreak) {
          elements.finalStreak.textContent = bestStreak.toString();
        }
        if (elements.finalWpm) {
          elements.finalWpm.textContent = wpm.toString();
        }
        
        // Trigger confetti celebration!
        if (typeof window !== 'undefined' && window.triggerConfetti) {
          window.triggerConfetti({ particleCount: correctCount > 10 ? 100 : 50 });
        }
        
        // Dispatch event for gamification
        window.dispatchEvent(new CustomEvent('bitlingo:game-complete'));
        
        // Setup share buttons
        const shareText = `‚ö° I scored ${correctCount} correct answers (${wpm} WPM) in the BitLingo Speed Round! Can you beat my score?`;
        const shareUrl = window.location.href;
        
        const twitterShare = game.querySelector('.twitter-share');
        const facebookShare = game.querySelector('.facebook-share');
        const whatsappShare = game.querySelector('.whatsapp-share');
        const copyBtn = game.querySelector('.copy-score');
        
        if (twitterShare) twitterShare.href = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`;
        if (facebookShare) facebookShare.href = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`;
        if (whatsappShare) whatsappShare.href = `https://wa.me/?text=${encodeURIComponent(shareText + ' ' + shareUrl)}`;
        if (copyBtn) {
          copyBtn.onclick = async () => {
            await navigator.clipboard.writeText(`${shareText} ${shareUrl}`);
            const copyIcon = copyBtn.querySelector('.copy-icon');
            const checkIcon = copyBtn.querySelector('.check-icon');
            if (copyIcon && checkIcon) {
              copyIcon.style.display = 'none';
              checkIcon.style.display = 'block';
              copyBtn.classList.add('copied');
              setTimeout(() => {
                copyIcon.style.display = 'block';
                checkIcon.style.display = 'none';
                copyBtn.classList.remove('copied');
              }, 2000);
            }
          };
        }
      }

      // Event listeners
      elements.btnStart?.addEventListener('click', startGame);
      elements.btnRestart?.addEventListener('click', () => {
        elements.gameOver.hidden = true;
        startGame();
      });
      
      // Setup header share buttons (always visible)
      setupHeaderShareButtons(game, `Practice vocabulary with BitLingo Speed Round! ‚ö° Try it yourself:`);
    });
  });

  function setupHeaderShareButtons(game, shareText) {
    const shareUrl = window.location.href;
    const twitterShareHeader = game.querySelector('.twitter-share-header');
    const facebookShareHeader = game.querySelector('.facebook-share-header');
    const copyBtnHeader = game.querySelector('.copy-link-header');
    
    if (twitterShareHeader) twitterShareHeader.href = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`;
    if (facebookShareHeader) facebookShareHeader.href = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`;
    if (copyBtnHeader) {
      copyBtnHeader.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(`${shareText} ${shareUrl}`);
          const copyIcon = copyBtnHeader.querySelector('.copy-icon');
          const checkIcon = copyBtnHeader.querySelector('.check-icon');
          if (copyIcon && checkIcon) {
            copyIcon.style.display = 'none';
            checkIcon.style.display = 'block';
            copyBtnHeader.classList.add('copied');
            setTimeout(() => {
              copyIcon.style.display = 'block';
              checkIcon.style.display = 'none';
              copyBtnHeader.classList.remove('copied');
            }, 2000);
          }
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    }
  }
</script>

