    height: 100%;
    background: linear-gradient(90deg, #f5a623, #e09a00);
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .progress-text {
    text-align: right;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .question-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
