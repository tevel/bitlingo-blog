---
/**
 * Memory Card Game Component
 * Find matching word-translation pairs
 */
import { LANGUAGE_DATA, UI_TRANSLATIONS } from '../../data/vocabulary';

interface Props {
  lang?: string;
  targetLang?: string;
  pairCount?: number;
}

const { lang = 'en', targetLang = 'it', pairCount = 6 } = Astro.props;

const uiStrings = UI_TRANSLATIONS[lang] || UI_TRANSLATIONS.en;
const targetData = LANGUAGE_DATA[targetLang] || LANGUAGE_DATA.it;
const words = targetData.words.slice(0, pairCount);

// Create pairs (word and translation cards)
const cards = words.flatMap(word => [
  { id: word.id, type: 'word', text: word.word, pairId: word.id },
  { id: `${word.id}-trans`, type: 'translation', text: word.translation, pairId: word.id }
]);
---

<div class="memory-game" data-lang={lang} data-target-lang={targetLang} data-pair-count={pairCount}>
  <div class="game-header">
    <div class="game-title">
      <span class="game-icon">üß†</span>
      <h3>{uiStrings.memory_title}</h3>
    </div>
    <div class="language-badge">
      <span class="flag">{targetData.flag}</span>
      <span class="lang-name">{targetData.nativeName}</span>
    </div>
  </div>

  <div class="stats-bar">
    <div class="stat">
      <span class="stat-value moves-count">0</span>
      <span class="stat-label">{uiStrings.memory_moves}</span>
    </div>
    <div class="stat">
      <span class="stat-value pairs-count">0</span>
      <span class="stat-label">/ {pairCount} {uiStrings.memory_pairs}</span>
    </div>
  </div>

  <div class="cards-grid" data-cards={JSON.stringify(cards)}>
    {cards.map((card, i) => (
      <button class="memory-card" data-index={i} data-pair-id={card.pairId} data-type={card.type}>
        <div class="card-inner">
          <div class="card-front">
            <span class="card-symbol">?</span>
          </div>
          <div class="card-back">
            <span class="card-text">{card.text}</span>
            <span class={`card-type ${card.type}`}>{card.type === 'word' ? targetData.flag : 'üî§'}</span>
          </div>
        </div>
      </button>
    ))}
  </div>

  <div class="game-footer">
    <button class="btn-restart">{uiStrings.memory_restart}</button>
  </div>

  <div class="game-complete" hidden>
    <div class="complete-icon">üèÜ</div>
    <h3>{uiStrings.memory_complete}</h3>
    <div class="final-stats">
      <span class="stat-highlight"><span class="moves-final">0</span> {uiStrings.memory_moves}</span>
    </div>
    <div class="share-result">
      <span class="share-label">Share your achievement!</span>
      <div class="share-buttons-inline">
        <a class="share-btn-small twitter-share" target="_blank" rel="noopener noreferrer" aria-label="Share on Twitter">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <a class="share-btn-small facebook-share" target="_blank" rel="noopener noreferrer" aria-label="Share on Facebook">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
        </a>
        <a class="share-btn-small whatsapp-share" target="_blank" rel="noopener noreferrer" aria-label="Share on WhatsApp">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
        </a>
        <button class="share-btn-small copy-score" aria-label="Copy result">
          <svg class="copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
          <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none;"><polyline points="20 6 9 17 4 12"/></svg>
        </button>
      </div>
    </div>
    <button class="btn-restart-complete">{uiStrings.memory_restart}</button>
    <a href="https://bitlingo.app" target="_blank" rel="noopener" class="btn-cta">
      {uiStrings.try_bitlingo} ‚Üí
    </a>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const games = document.querySelectorAll('.memory-game');
    
    games.forEach(game => {
      const pairCount = parseInt(game.dataset.pairCount) || 6;
      let moves = 0;
      let pairsFound = 0;
      let flippedCards: HTMLElement[] = [];
      let canFlip = true;

      const elements = {
        grid: game.querySelector('.cards-grid') as HTMLElement,
        cards: game.querySelectorAll('.memory-card') as NodeListOf<HTMLElement>,
        movesCount: game.querySelectorAll('.moves-count'),
        pairsCount: game.querySelector('.pairs-count'),
        movesFinal: game.querySelector('.moves-final'),
        btnRestart: game.querySelector('.btn-restart'),
        btnRestartComplete: game.querySelector('.btn-restart-complete'),
        gameComplete: game.querySelector('.game-complete'),
        gameFooter: game.querySelector('.game-footer'),
      };

      function shuffle() {
        const cards = [...elements.cards];
        cards.sort(() => Math.random() - 0.5);
        cards.forEach(card => elements.grid.appendChild(card));
      }

      function flipCard(card: HTMLElement) {
        if (!canFlip || card.classList.contains('flipped') || card.classList.contains('matched')) {
          return;
        }

        card.classList.add('flipped');
        flippedCards.push(card);

        if (flippedCards.length === 2) {
          moves++;
          elements.movesCount.forEach(el => el.textContent = moves.toString());
          checkMatch();
        }
      }

      function checkMatch() {
        canFlip = false;
        const [card1, card2] = flippedCards;
        
        const pairId1 = card1.dataset.pairId;
        const pairId2 = card2.dataset.pairId;
        const type1 = card1.dataset.type;
        const type2 = card2.dataset.type;

        // Match if same pairId but different types (word vs translation)
        if (pairId1 === pairId2 && type1 !== type2) {
          // Match!
          setTimeout(() => {
            card1.classList.add('matched');
            card2.classList.add('matched');
            pairsFound++;
            if (elements.pairsCount) elements.pairsCount.textContent = pairsFound.toString();
            
            flippedCards = [];
            canFlip = true;

            if (pairsFound === pairCount) {
              setTimeout(showComplete, 500);
            }
          }, 300);
        } else {
          // No match
          setTimeout(() => {
            card1.classList.remove('flipped');
            card2.classList.remove('flipped');
            flippedCards = [];
            canFlip = true;
          }, 800);
        }
      }

      function showComplete() {
        if (elements.gameComplete instanceof HTMLElement) {
          elements.gameComplete.hidden = false;
        }
        if (elements.gameFooter instanceof HTMLElement) {
          elements.gameFooter.hidden = true;
        }
        if (elements.movesFinal) {
          elements.movesFinal.textContent = moves.toString();
        }
        
        // Setup share buttons
        const shareText = `I completed the BitLingo memory game in ${moves} moves! üß† Try it yourself:`;
        const shareUrl = window.location.href;
        
        const twitterShare = game.querySelector('.twitter-share');
        const facebookShare = game.querySelector('.facebook-share');
        const whatsappShare = game.querySelector('.whatsapp-share');
        const copyBtn = game.querySelector('.copy-score');
        
        if (twitterShare) twitterShare.href = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`;
        if (facebookShare) facebookShare.href = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`;
        if (whatsappShare) whatsappShare.href = `https://wa.me/?text=${encodeURIComponent(shareText + ' ' + shareUrl)}`;
        if (copyBtn) {
          copyBtn.onclick = async () => {
            await navigator.clipboard.writeText(`${shareText} ${shareUrl}`);
            const copyIcon = copyBtn.querySelector('.copy-icon');
            const checkIcon = copyBtn.querySelector('.check-icon');
            if (copyIcon && checkIcon) {
              copyIcon.style.display = 'none';
              checkIcon.style.display = 'block';
              copyBtn.classList.add('copied');
              setTimeout(() => {
                copyIcon.style.display = 'block';
                checkIcon.style.display = 'none';
                copyBtn.classList.remove('copied');
              }, 2000);
            }
          };
        }
      }

      function restart() {
        moves = 0;
        pairsFound = 0;
        flippedCards = [];
        canFlip = true;
        
        elements.movesCount.forEach(el => el.textContent = '0');
        if (elements.pairsCount) elements.pairsCount.textContent = '0';
        if (elements.gameComplete instanceof HTMLElement) {
          elements.gameComplete.hidden = true;
        }
        if (elements.gameFooter instanceof HTMLElement) {
          elements.gameFooter.hidden = false;
        }
        
        elements.cards.forEach(card => {
          card.classList.remove('flipped', 'matched');
        });
        
        setTimeout(shuffle, 300);
      }

      // Event listeners
      elements.cards.forEach(card => {
        card.addEventListener('click', () => flipCard(card));
      });

      elements.btnRestart?.addEventListener('click', restart);
      elements.btnRestartComplete?.addEventListener('click', restart);

      // Initialize with shuffle
      shuffle();
    });
  });
</script>

<style>
  .memory-game {
    background: linear-gradient(145deg, rgba(26, 54, 93, 0.9), rgba(17, 34, 61, 0.95));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 1.5rem;
    max-width: 550px;
    margin: 2rem auto;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), 0 0 60px rgba(74, 144, 226, 0.1);
  }

  .game-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .game-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .game-icon {
    font-size: 1.5rem;
  }

  .game-title h3 {
    margin: 0;
    font-size: 1.25rem;
    background: linear-gradient(135deg, #f5a623, #e09a00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .language-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.9rem;
  }

  .flag {
    font-size: 1.2rem;
  }

  .lang-name {
    color: rgba(255, 255, 255, 0.8);
  }

  .stats-bar {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: #f5a623;
  }

  .stat-label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .memory-card {
    aspect-ratio: 1;
    perspective: 1000px;
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
  }

  .memory-card.flipped .card-inner,
  .memory-card.matched .card-inner {
    transform: rotateY(180deg);
  }

  .card-front, .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .card-front {
    background: linear-gradient(145deg, rgba(74, 144, 226, 0.3), rgba(26, 54, 93, 0.5));
    border: 1px solid rgba(74, 144, 226, 0.3);
  }

  .card-symbol {
    font-size: 2rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .card-back {
    background: linear-gradient(145deg, rgba(245, 166, 35, 0.2), rgba(224, 154, 0, 0.1));
    border: 1px solid rgba(245, 166, 35, 0.3);
    transform: rotateY(180deg);
    padding: 0.5rem;
  }

  .card-text {
    font-size: 0.9rem;
    font-weight: 600;
    color: white;
    text-align: center;
    word-break: break-word;
  }

  .card-type {
    position: absolute;
    bottom: 0.3rem;
    font-size: 0.7rem;
  }

  .memory-card.matched .card-back {
    background: linear-gradient(145deg, rgba(34, 197, 94, 0.3), rgba(34, 197, 94, 0.1));
    border-color: rgba(34, 197, 94, 0.5);
  }

  .memory-card:hover:not(.flipped):not(.matched) .card-inner {
    transform: scale(1.05);
  }

  .game-footer {
    display: flex;
    justify-content: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .btn-restart, .btn-restart-complete {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 0.75rem 1.5rem;
    color: white;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-restart:hover, .btn-restart-complete:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(245, 166, 35, 0.5);
  }

  .game-complete {
    text-align: center;
    padding: 2rem;
    animation: fadeIn 0.3s ease;
  }

  .complete-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    animation: bounce 0.5s ease;
  }

  .game-complete h3 {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 1rem;
  }

  .final-stats {
    margin-bottom: 1.5rem;
  }

  .stat-highlight {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .moves-final {
    color: #f5a623;
    font-weight: 700;
    font-size: 1.5rem;
  }

  .btn-cta {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 1px solid rgba(245, 166, 35, 0.5);
    border-radius: 10px;
    color: #f5a623;
    text-decoration: none;
    font-weight: 500;
