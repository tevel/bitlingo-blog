          <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none;"><polyline points="20 6 9 17 4 12"/></svg>
        </button>
      </div>
    </div>
    <button class="btn-restart-complete">{uiStrings.matching_restart}</button>
    <a href="https://bitlingo.app" target="_blank" rel="noopener" class="btn-cta">
      {uiStrings.try_bitlingo} â†’
    </a>
  </div>
</div>

<script define:vars={{ words: words, pairCount }}>
  document.addEventListener('DOMContentLoaded', () => {
    const games = document.querySelectorAll('.matching-game');
    
    games.forEach(game => {
      let selected = null;
      let matchedPairs = 0;
      const connections = [];

      const elements = {
        wordItems: game.querySelectorAll('.word-item'),
        translationItems: game.querySelectorAll('.translation-item'),
        linesSvg: game.querySelector('.lines-svg'),
        matchesCount: game.querySelector('.matches-count'),
        btnRestart: game.querySelector('.btn-restart'),
        btnRestartComplete: game.querySelector('.btn-restart-complete'),
        gameComplete: game.querySelector('.game-complete'),
        matchingContainer: game.querySelector('.matching-container'),
      };

      function selectItem(item) {
        if (item.classList.contains('matched')) return;
        
        const type = item.dataset.type;
        const id = item.dataset.id;

        if (selected === null) {
          // First selection
          selected = { item, type, id };
          item.classList.add('selected');
        } else if (selected.type === type) {
          // Same type - switch selection
          selected.item.classList.remove('selected');
          selected = { item, type, id };
          item.classList.add('selected');
        } else {
          // Different type - check for match
          if (selected.id === id) {
            // Correct match!
            selected.item.classList.remove('selected');
            selected.item.classList.add('matched');
            item.classList.add('matched');
            
            // Draw connection line
            drawLine(
              type === 'word' ? item : selected.item,
              type === 'translation' ? item : selected.item
            );
            
            matchedPairs++;
            elements.matchesCount.textContent = matchedPairs;
            
            if (matchedPairs === pairCount) {
              setTimeout(showComplete, 500);
            }
          } else {
            // Wrong match - flash red
            selected.item.classList.add('wrong');
            item.classList.add('wrong');
            
            setTimeout(() => {
              selected.item.classList.remove('wrong', 'selected');
              item.classList.remove('wrong');
              selected = null;
            }, 500);
            return;
          }
          selected = null;
        }
      }

      function drawLine(wordItem, translationItem) {
        const container = elements.matchingContainer;
        const containerRect = container.getBoundingClientRect();
        const wordRect = wordItem.getBoundingClientRect();
        const transRect = translationItem.getBoundingClientRect();
        
        const x1 = wordRect.right - containerRect.left;
        const y1 = wordRect.top + wordRect.height / 2 - containerRect.top;
        const x2 = transRect.left - containerRect.left;
        const y2 = transRect.top + transRect.height / 2 - containerRect.top;
        
        const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
        line.setAttribute('x1', x1);
        line.setAttribute('y1', y1);
        line.setAttribute('x2', x2);
        line.setAttribute('y2', y2);
        line.setAttribute('stroke', '#f5a623');
        line.setAttribute('stroke-width', '2');
        line.setAttribute('stroke-linecap', 'round');
        line.classList.add('connection-line');
        
        elements.linesSvg.appendChild(line);
        connections.push(line);
        
        // Animate
        const length = Math.sqrt(Math.pow(x2 - x1, 2) + Math.pow(y2 - y1, 2));
        line.style.strokeDasharray = length;
        line.style.strokeDashoffset = length;
        line.style.animation = 'drawLine 0.3s ease forwards';
      }

      function showComplete() {
        elements.gameComplete.hidden = false;
        
        // Setup share buttons
        const shareText = `I matched all ${pairCount} word pairs in the BitLingo matching game! ðŸ”— Try it yourself:`;
        const shareUrl = window.location.href;
        
        const twitterShare = game.querySelector('.twitter-share');
        const facebookShare = game.querySelector('.facebook-share');
        const whatsappShare = game.querySelector('.whatsapp-share');
        const copyBtn = game.querySelector('.copy-score');
        
        if (twitterShare) twitterShare.href = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`;
        if (facebookShare) facebookShare.href = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`;
        if (whatsappShare) whatsappShare.href = `https://wa.me/?text=${encodeURIComponent(shareText + ' ' + shareUrl)}`;
        if (copyBtn) {
          copyBtn.onclick = async () => {
            await navigator.clipboard.writeText(`${shareText} ${shareUrl}`);
            const copyIcon = copyBtn.querySelector('.copy-icon');
            const checkIcon = copyBtn.querySelector('.check-icon');
            if (copyIcon && checkIcon) {
              copyIcon.style.display = 'none';
              checkIcon.style.display = 'block';
              copyBtn.classList.add('copied');
              setTimeout(() => {
                copyIcon.style.display = 'block';
                checkIcon.style.display = 'none';
                copyBtn.classList.remove('copied');
              }, 2000);
            }
          };
        }
      }

      function restart() {
        // Reset state
        selected = null;
        matchedPairs = 0;
        elements.matchesCount.textContent = 0;
        elements.gameComplete.hidden = true;
        
        // Clear lines
        connections.forEach(line => line.remove());
        connections.length = 0;
        
        // Reset items
        [...elements.wordItems, ...elements.translationItems].forEach(item => {
          item.classList.remove('selected', 'matched', 'wrong');
        });
        
        // Shuffle translations
        const transColumn = game.querySelector('.translations-column');
        const items = [...transColumn.children];
        items.sort(() => Math.random() - 0.5);
        items.forEach(item => transColumn.appendChild(item));
      }

      // Event listeners
      [...elements.wordItems, ...elements.translationItems].forEach(item => {
        item.addEventListener('click', () => selectItem(item));
      });

      elements.btnRestart?.addEventListener('click', restart);
      elements.btnRestartComplete?.addEventListener('click', restart);

      // Update lines on resize
      window.addEventListener('resize', () => {
        connections.forEach(line => line.remove());
        connections.length = 0;
        
        // Redraw for matched pairs
        elements.wordItems.forEach(wordItem => {
          if (wordItem.classList.contains('matched')) {
            const id = wordItem.dataset.id;
            const transItem = [...elements.translationItems].find(t => t.dataset.id === id);
            if (transItem) drawLine(wordItem, transItem);
          }
        });
      });
    });
  });
</script>

<style>
