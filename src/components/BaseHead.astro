---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';

interface Props {
	title?: string;
	description?: string;
	image?: ImageMetadata | string;
	lang?: string;
	keywords?: string | string[];
	ogImageAlt?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const defaultTitle = 'BitLingo - Learn Languages On The Go | Audio Vocabulary App';
const defaultDescription =
	'Learn languages the smart way with BitLingo. Audio-first vocabulary app that plays word pairs in any language while you commute, walk, or exercise. Build vocabulary hands-free without screen time. Free, works offline.';
const defaultKeywords = [
	'language learning app',
	'vocabulary builder',
	'audio learning',
	'learn languages on commute',
	'hands-free language learning',
	'flashcard app',
	'spaced repetition',
	'language pairs',
	'tts pronunciation',
	'offline learning',
];

const fallbackOg = '/og-bitlingo.svg';

const {
	title,
	description,
	image = FallbackImage,
	lang = 'en',
	keywords = defaultKeywords,
	ogImageAlt,
} = Astro.props as Props;
const resolvedTitle = title || defaultTitle;
const resolvedDescription = description || defaultDescription;
const resolvedKeywords = Array.isArray(keywords) ? keywords.join(', ') : keywords;
const imageSrc = typeof image === 'string' ? image : image.src;
const resolvedImageSrc = imageSrc || fallbackOg;
const resolvedImageUrl = new URL(resolvedImageSrc, Astro.url);
const resolvedImageWidth = typeof image === 'object' ? image.width : undefined;
const resolvedImageHeight = typeof image === 'object' ? image.height : undefined;
const ogLocale = lang ? `${lang}_${lang.toUpperCase()}` : 'en_US';
const resolvedImageAlt = ogImageAlt || resolvedTitle;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{resolvedTitle}</title>
<meta name="title" content={resolvedTitle} />
<meta name="description" content={resolvedDescription} />
<meta name="keywords" content={resolvedKeywords} />
<meta name="language" content={lang} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:locale" content={ogLocale} />
<meta property="og:title" content={resolvedTitle} />
<meta property="og:description" content={resolvedDescription} />
<meta property="og:image" content={resolvedImageUrl} />
<meta property="og:image:alt" content={resolvedImageAlt} />
{resolvedImageWidth && <meta property="og:image:width" content={resolvedImageWidth} />}
{resolvedImageHeight && <meta property="og:image:height" content={resolvedImageHeight} />}
<meta property="og:site_name" content="BitLingo" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={resolvedTitle} />
<meta property="twitter:description" content={resolvedDescription} />
<meta property="twitter:image" content={resolvedImageUrl} />
<meta property="twitter:image:alt" content={resolvedImageAlt} />

<!-- PWA Support -->
<meta name="theme-color" content="#1a365d" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<link rel="apple-touch-icon" href="/favicon.svg" />
<link rel="manifest" href="/manifest.json" />

<!-- Service Worker Registration -->
<script is:inline>
  if ('serviceWorker' in navigator) {
    window.addEventListener('load', async () => {
      try {
        // Unregister any existing service workers from main app that might interfere
        const registrations = await navigator.serviceWorker.getRegistrations();
        for (const registration of registrations) {
          // If it's not our blog service worker, unregister it
          if (!registration.scope.includes('/blog') && registration.active?.scriptURL !== new URL('/sw.js', window.location.origin).href) {
            await registration.unregister();
          }
        }
        // Register our blog service worker
        await navigator.serviceWorker.register('/sw.js', { scope: '/blog/' });
      } catch (error) {
        console.error('Service worker registration failed:', error);
      }
    });
  }
</script>
